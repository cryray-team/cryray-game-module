[compatibility]
engine_mode = ano_1_5_1

[actor_cryray]
actor_condition_cryray = condition_cryray

[condition_cryray]
stun_hit_value = 0.0002 ; Как быстро будет убывать эффект оглушения по ГГ со временем, без приминения медикоментов
stun_effector_zoom_wpn = 0.001 ; Как быстро будет убывать эффект при прицеливании, если у ГГ оглушение

[gameplay]
load_level_ambients_sounds = true; Загрузка эмбиентов для каждой локации
artefacts_slot_16 = false
enable_sleeping = false
enable_thists = false

[render_cryray]
disable_boot_screens = false; Отключить загрузочные экраны, будет один общий, также меняет шрифт сообщение на загрузочном экране 
nightvision_gamma_ambient = 7, 7, 7	; Канал шейдерного ПНВ, эмбиент освещения
nightvision_gamma_hemi = 0, 0, 0, 205 ; Хеми сфера шейдерного ПНВ

[artefacts_cryray]
artefact_koef_reaction = 1000 ; Коэф. деление основного процента при реакции артефактов
artefact_reaction_v = 0.00015 ; Скорость убывания энергии на поясе

[rain_manager]
